
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditUser</title>
</head>
<body>
    <form method="post" action="">
        <p>Email: </p>
        <input type="text" name="Email" value="@ViewBag.Email" />
        <p>Имя:</p>
        <input type="text" name="FirstName" value="@ViewBag.FirstName"/>
        <p>Фамилия:</p>
        <input type="text" name="LastName" value="@ViewBag.LastName"/>
        <input type="submit" value="Отправить" />

        <p><a href="/Home/DeleteUser/@ViewBag.Id">Удалить пользователя</a></p>
        <p>@ViewBag.Msg</p>
    </form>
</body>
</html>
